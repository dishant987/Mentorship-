generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  mentee
  mentor
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?

  SentNotifications     Notification[] @relation("sender")
  ReceivedNotifications Notification[] @relation("receiver")
}

model Profile {
  id        String   @id @default(cuid())
  name      String // Added name to profile
  email     String   @unique // Added email to profile 
  bio       String? // Optional bio field
  role      Role
  interests String[] // Optional interests field
  skills    String[]
  userId    String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id         String             @id @default(cuid())
  senderId   String
  receiverId String
  status     NotificationStatus @default(PENDING)
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  sender   User @relation(name: "sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation(name: "receiver", fields: [receiverId], references: [id], onDelete: Cascade)
}

enum NotificationStatus {
  PENDING
  ACCEPTED
  DECLINED
}
